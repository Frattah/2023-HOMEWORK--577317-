package it.uniroma3.diadia.ambienti;

import static org.junit.jupiter.api.Assertions.*;

import org.junit.jupiter.api.BeforeEach;
import org.junit.jupiter.api.Test;

class LabirintoTest {
	private Labirinto labirinto = new Labirinto();

	@BeforeEach
	public void setUp() {
		
	}
	
	// getStanzaIniziale
	@Test
	void testGetStanzaIniziale() {
		assertEquals(new Stanza("atrio"), labirinto.getStanzaIniziale(), "La stanza iniziale non è corretta");
	}
	
	
	// getStanzaFinale
	@Test
	void testGetStanzaFinale() {
		assertEquals(new Stanza("biblioteca"), labirinto.getStanzaFinale(), "La stanza finale non è corretta!");
	}

}
